{
  "AppSettings": {
    "RtuOptions": {
      "RtuMaster": {
        "SerialPort": "COM1",
        "Baudrate": 19200,
        "ReadTimeout": 10000,
        "WriteTimeout": 10000
      },
      "RtuSlave": {
        "ID": 1
      }
    },
    "TcpOptions": {
      "TcpMaster": {
        "ReceiveTimeout": 1000,
        "SendTimeout": 1000
      },
      "TcpSlave": {
        "Address": "10.0.1.129",
        "Port": 502,
        "ID": 1
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog", "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "{Timestamp: HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.log",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Debug",
          "outputTemplate": "{Timestamp: HH:mm:ss.fff zzz} {SourceContext} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
